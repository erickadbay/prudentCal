!!!
%html
%head
	%title PrudentCal | Collaborative calendar application
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%link{:rel=>"stylesheet", :href=>"https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"}/
%body
	%header
		.header_inner
			= link_to image_tag( 'prudentcal_logo.png'), root_path, id: "logo"
			%nav
				- if user_signed_in?
					-if current_user.role=="Professor"
						= link_to "New Course", new_course_path
					= link_to "Sign Out", destroy_user_session_path, method: :delete
				- else
					= link_to "Log In", new_user_session_path
	.top-container
		- if user_signed_in?
			- if current_user.role=="Professor"
				%h1 Hello, Prof. #{current_user.first_name} #{current_user.last_name}
			- else
				%h1 Hello, #{current_user.first_name} #{current_user.last_name}
	%p.notice= notice
	%p.alert= alert

	= yield
